@model IEnumerable<WebApplication7.Models.Clinic>

@{
    ViewData["Title"] = "Index";
}

<h1>@_localization.Getkey("Klinikler").Value</h1>

<p>
    <a asp-action="Create" class="btn btn-create">@_localization.Getkey("YeniEkle").Value</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.clinicName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.clinicName)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.clinicId" class="btn btn-edit">@_localization.Getkey("Edit").Value</a>
                    <a asp-action="Details" asp-route-id="@item.clinicId" class="btn btn-details">@_localization.Getkey("Details").Value</a>
                    <a asp-action="Delete" asp-route-id="@item.clinicId" class="btn btn-delete">@_localization.Getkey("Delete").Value</a>
            </td>
        </tr>
}
    </tbody>
</table>
