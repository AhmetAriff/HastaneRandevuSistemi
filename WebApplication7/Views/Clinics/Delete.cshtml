@model WebApplication7.Models.Clinic

@{
    ViewData["Title"] = "Delete";
}



<div class="shadow p-3 mb-5 bg-white rounded" id="centeredContent">

    <h3>@_localization.Getkey("SilmekEmin")</h3>

    <!-- İçerik div'i -->

    <div class="content">
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.clinicName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.clinicName)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="clinicId" />
            <div class="d-flex justify-content-center align-items-center">
                <input type="submit" value=@_localization.Getkey("Delete") class="btn btn-danger" />
                <span class="mx-2">|</span>
                <a asp-action="Index" class="btn btn-primary">@_localization.Getkey("GeriDön")</a>
            </div>

        </form>
    </div>
</div>

