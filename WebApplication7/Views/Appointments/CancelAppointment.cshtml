@model WebApplication7.Models.Appointment

@{
    ViewData["Title"] = "Delete";
}

<div class="shadow p-3 mb-5 bg-white rounded" id="centeredContent">

    <div class="text-center"><h3>@_localization.Getkey("İptalEmin")</h3> </div>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.doctor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.doctor.firstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.appointmentDate)
        </dt>
        <dd class="col-sm-10">
                <div style="width: 100px; display: inline-block;"></div>@Html.DisplayFor(model => model.appointmentDate)
        </dd>
    </dl>

    <form asp-action="CancelAppointment">
        <input type="hidden" asp-for="appointmentID" />
        <div class="text-center">
        <input type="submit" value="@_localization.Getkey("İptalEt")" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">@_localization.Getkey("GeriDön")</a>
            </div>
    </form>
</div>
</div>
