@model WebApplication7.Models.Appointment

@{
    ViewData["Title"] = "Delete";
}

<div class="shadow p-3 mb-5 bg-white rounded" id="centeredContent">
<h3>@_localization.Getkey("SilmekEmin")</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.user)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.user.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.doctor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.doctor.firstName)
        </dd>
        <dt class = "col-sm-2">
            Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.appointmentDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="appointmentID" />
            <div class="d-flex justify-content-center align-items-center">
            <input type="submit" value=@_localization.Getkey("Delete") class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-primary">@_localization.Getkey("GeriDön")</a>
            </div>
    </form>
</div>
</div>
