@model IEnumerable<WebApplication7.Models.Appointment>

    <h1>Randevularım</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.doctor.clinic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.doctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.appointmentDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.doctor.clinic.clinicName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.doctor.firstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.appointmentDate)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.appointmentID">Details</a> |
                 <a asp-action="CancelAppointment" asp-route-id="@item.appointmentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
