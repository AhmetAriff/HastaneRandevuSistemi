@model WebApplication7.Models.Appointment

@{
    ViewData["Title"] = "Details";
}
<div style="width :400px" class="shadow p-3 mb-5 bg-white rounded" id="centeredContent">

    <div class="text-center"><h1>@_localization.Getkey("RandevuBilgileri")</h1></div>
    <div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.doctor.clinic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.doctor.clinic.clinicName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.doctor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.doctor.firstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.appointmentDate)
        </dt>
        <dd class = "col-sm-10">
                <div style="width: 100px; display: inline-block;"></div>@Html.DisplayFor(model => model.appointmentDate)

        </dd>
    </dl>
</div>
<div class="text-center">
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.appointmentID" class="btn btn-success">Edit</a>
    }    
    
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
</div>
