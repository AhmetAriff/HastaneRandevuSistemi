@model WebApplication7.Models.Appointment

@{
    ViewData["Title"] = "Details";
}

<h1>@_localization.Getkey("RandevuBilgileri")</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.doctor.clinic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.doctor.clinic.clinicName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.doctor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.doctor.firstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.appointmentDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.appointmentDate)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.appointmentID">Edit</a>
    }    
    
    <a asp-action="Index">Back to List</a>
</div>
