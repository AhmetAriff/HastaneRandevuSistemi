

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication7</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication7.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                

                @if (User.IsInRole("Admin"))
                {

                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MHRS (Admin)</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Doctors" asp-action="Index">@_localization.Getkey("DoktorDuzenleme").Value</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Clinics" asp-action="Index">@_localization.Getkey("KlinikDuzenleme").Value</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Appointments" asp-action="Index">@_localization.Getkey("RandevuDuzenleme").Value</a>
                            </li>
                        </ul>
                        <partial name="_LoginPartial" />
                        <div class="dropdown">
                            <button type="button"
                                    class="btn btn-primary dropdown-toggle"
                                    data-bs-toggle="dropdown">
                                @_localization.Getkey("DilSecenegi").Value
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <a asp-controller="Home"
                                       asp-action="ChangeLanguage"
                                       asp-route-culture="tr-TR"
                                       class="dropdown-item">
                                        <i class="flag-icon flag-icon-gb"></i> Türkçe
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="Home"
                                       asp-action="ChangeLanguage"
                                       asp-route-culture="en-US"
                                       class="dropdown-item">
                                        <i class="flag-icon flag-icon-gb"></i> English
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                }
                @if (User.IsInRole("User"))
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MHRS</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Appointments" asp-action="Reserve">@_localization.Getkey("RandevuAl").Value</a>
                        </li>
                        <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Appointments" asp-action="MyAppointments">@_localization.Getkey("Randevularım").Value</a>
                        </li>
                    </ul>
                        
                    <partial name="_LoginPartial" />
                    
                        <div class="dropdown">
                            <button style="width: 200px" type="button"
                                    class="btn btn-primary dropdown-toggle"
                                    data-bs-toggle="dropdown">
                                @_localization.Getkey("DilSecenegi").Value
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <a asp-controller="Home"
                                       asp-action="ChangeLanguage"
                                       asp-route-culture="tr-TR"
                                       class="dropdown-item">
                                        <i class="flag-icon flag-icon-gb"></i> Türkçe
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="Home"
                                       asp-action="ChangeLanguage"
                                       asp-route-culture="en-US"
                                       class="dropdown-item">
                                        <i class="flag-icon flag-icon-gb"></i> English
                                    </a>
                                </li>
                            </ul>
                        </div>
            
                </div>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - WebApplication7 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
